<main>
    <section id="create-container">
        <div class="create-container-info">
            <h1>Add Cat</h1>
            <form method="POST" class="cat-form">
                <label>Name:</label>
                <input type="text" id="name" name="name" placeholder="Cat name">
                <label>Description:</label>
                <textarea id="description" name="description" placeholder="Introduce your cat..."></textarea>
                <label>Image:</label>
                <input type="text" id="image" name="image" placeholder="http://...">
                <label for="group">Breed</label>
                <select name="breed" id="group">
                    {{#each breeds}}
                    <option value="{{_id}}">{{name}}</option>
                    {{/each}}
                </select>
                <button type="submit">Add Cat</button>
            </form>
        </div>
    </section>
</main>
